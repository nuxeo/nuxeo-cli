{
  "name": "nuxeo-cli",
  "version": "1.6.1",
  "description": "Nuxeo CLI is a command-line interface for helping developers around Nuxeo ecosystem. It provides project bootstrapping, bundles hot reload,...",
  "main": "./bin/nuxeo-cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuxeo/nuxeo-cli"
  },
  "scripts": {
    "dev": "rm -rf $PWD/node_modules/generator-nuxeo && ln -s $PWD/../generator-nuxeo $PWD/node_modules/generator-nuxeo",
    "test": "mocha --timeout 5000 -u tdd",
    "clean": "rimraf coverage/ test-results.xml .nyc*",
    "precoverage": "nyc npm test -- --reporter mocha-junit-reporter",
    "coverage": "nyc report --reporter=cobertura",
    "preshrinkwrap": "rm -rf node_modules && npm install --save generator-nuxeo@* && npm install",
    "postshrinkwrap": "npm test",
    "preversion": "npm shrinkwrap && git add -f npm-shrinkwrap.json",
    "postversion": "npm publish && git rm -f npm-shrinkwrap.json && npm version --ignore-scripts --no-git-tag-version patch && npm install --save nuxeo/generator-nuxeo#master && git commit -am \"Post release ${npm_package_version}\" && git push && git push --tags"
  },
  "keywords": [
    "nuxeo",
    "cli"
  ],
  "author": "Arnaud Kervern",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.4 <8"
  },
  "dependencies": {
    "ansi-256-colors": "^1.1.0",
    "chalk": "^2.0.1",
    "generator-nuxeo": "github:nuxeo/generator-nuxeo#master",
    "is-windows": "^1.0.1",
    "lodash": "^4.17.4",
    "log-symbols": "^2.0.0",
    "pad-right": "^0.2.2",
    "semver": "^5.4.1",
    "update-notifier": "^2.2.0",
    "yargs": "^8.0.2",
    "yeoman-environment": "^2.0.0"
  },
  "bin": {
    "nuxeo": "./bin/nuxeo-cli.js"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.3.0",
    "mocha": "^3.4.2",
    "mocha-junit-reporter": "^1.13.0",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "tmp": "0.0.31"
  }
}
